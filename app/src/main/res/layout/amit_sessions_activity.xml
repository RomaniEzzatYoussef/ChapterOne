<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmitSessionsActivity">

    <ScrollView
        tools:layout_editor_absoluteY="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="Amit Sessions"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/seccion1Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession1"
                android:text="Session One" />

            <Button
                android:id="@+id/session2Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession2"
                android:text="Session Two" />

            <Button
                android:id="@+id/session3Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession3"
                android:text="Session Three" />

            <Button
                android:id="@+id/session4Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession4"
                android:text="Session Four" />

            <TextView
                android:id="@+id/resultDataText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/session5Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession5"
                android:text="Session Five" />

            <Button
                android:id="@+id/session6_btn"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:background="#00B0FF"
                android:onClick="showSession6"
                android:layout_height="wrap_content"
                android:text="Session 6" />

            <Button
                android:id="@+id/session7_btn"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:background="#2979FF"
                android:onClick="showSession7"
                android:layout_height="wrap_content"
                android:text="Session 7" />

            <Button
                android:id="@+id/session8Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession8"
                android:text="Session 8" />

            <Button
                android:id="@+id/session8.1Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession8_1"
                android:text="Session 8.1" />

            <Button
                android:id="@+id/session9Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession9"
                android:text="Session 9" />

            <Button
                android:id="@+id/session10Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession10"
                android:text="Session 10" />

            <Button
                android:id="@+id/session11Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showSession10"
                android:text="Session 11" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>