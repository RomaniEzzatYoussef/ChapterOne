<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleRomanitextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="@android:dimen/app_icon_size"
        android:background="#AA00FF"
        android:fontFamily="sans-serif-condensed"
        android:text="Romani Application Login:"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorAccent"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="850dp"
                android:background="@drawable/b"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBE2E9"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="username:"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/userNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="r"
                        android:inputType="textEmailAddress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBE2E9"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/passWordTextView"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="password:"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="r"
                        android:inputType="textPassword" />

                </LinearLayout>

                <TextView
                    android:id="@+id/loginMessageTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:textColor="#FF0000"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/login1Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F7F2F2"
                        android:onClick="login"
                        android:layout_weight="1"
                        android:text="Log In"
                        android:textAllCaps="false"
                        android:textColor="#651FFF"
                        android:layout_marginRight="22dp"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/closeButton"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#F7F2F2"
                        android:onClick="closeApplication"
                        android:text="cancel"
                        android:layout_marginLeft="22dp"
                        android:textAllCaps="false"
                        android:textColor="#FF0000"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/createNewUserTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"                        android:onClick="createNewAccount"
                        android:text="Create New Account..."
                        android:textColor="#0000FF"
                        android:textStyle="bold"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="visitGoogle"
                        android:text="Visit Google"
                        android:textColor="#F50057"
                        android:textStyle="bold"
                        android:textSize="25sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/myDBText"
                    android:layout_width="match_parent"
                    android:layout_marginTop="33dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:onClick="createNewAccount"
                    android:text="DB Connection"
                    android:textColor="#FF9100"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="33dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:onClick="dialUp"
                    android:text="Dail Up 01205224265"
                    android:textColor="#FF9100"
                    android:textStyle="bold"
                    android:textSize="25sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/romani" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>