<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Point1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/explorer_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/e" />
        <TextView
            android:id="@+id/explorer_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F70404"
            android:textSize="26dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:padding="15dp"
            android:text="Mars Explorer" />

        <TextView
            android:id="@+id/romani_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations, Romani"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="26dp"
            android:textColor="#D500F9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>